@{
    ViewBag.Title = "Проверка дисков в розыске";
}
@model WebApplication2.Models.Disks

<div class="jumbotron" style="background:url(../../Content/background.png)">
    <center><h2><font face="Arial">Проверка дисков в розыске</font></h2> </center>
    <center>
        @using (Html.BeginForm("CheckCode", "Home", FormMethod.Post))
        {
            <p class="lead"><input placeholder="Введите код с диска" type="text"></p>
            <p><button class="btn btn-primary btn-lg">Проверить</button></p>
        }
    </center>
</div>

@if (@Model != null)
{
    if (Model.Id != 0)
    {
        if (Model.LOT)
        {
            <h3>Диски были украдены </h3>
            <p>Необходимо обратиться в МВД для поимки воров.</p>
        }
        else
        {
            <h3>Диски не были украдены </h3>

        }
    }
    else
    { <h3> Информация по данным дискам отсутствует </h3> }
}
else
{}
