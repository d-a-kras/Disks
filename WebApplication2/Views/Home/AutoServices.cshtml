
@{
    ViewBag.Title = "Список авторизованных сервисов";
}
@model IEnumerable<WebApplication2.Models.AutoService>
<head>
    <link rel="stylesheet" href="../../Content/tab.css" type="text/css" media="all" />
</head>
<center>
    <a href="CreateAutoService" class="t592__btn t-btn t-btn_sm" style="color:#ffffff;background-color:#13ce66;border-radius:5px; -moz-border-radius:5px; -webkit-border-radius:5px;"><table style="width:100%; height:100%;"><tr><td>Добавить автосервис</td></tr></table></a>
</center>
<div class="tabs" style="margin-top:50px;">



    <table style=" overflow-x:auto;overflow-y:hidden; height:70px ;white-space: nowrap;display: block;">
        <tr>
            @for (int i = 0; i < (int)ViewBag.CC; i++)
            {
                <td class="list">
                    <input id="tab@(i+1)" type="radio" name="tabs">
                    <label style="float: left;display:block" for="tab@(i+1)" title="@ViewData[i.ToString()].ToString()"> @ViewData[i.ToString()].ToString()</label>
                </td>
            }
        </tr>

    </table>

    @*
        <input id="tab2" type="radio" name="tabs">
        <label for="tab2" title="Волгоград">Волгоград</label>

        <input id="tab3" type="radio" name="tabs">
        <label for="tab3" title="Краснодар">Краснодар</label>*@


    @for (int i = 0; i < (int)ViewBag.CC; i++)
    {
        <section style="min-height:200px" id="content-tab@(i+1)">

            @foreach (var item in Model.Where(a => a.City == ViewData[i.ToString()].ToString()))
            {
                <div style="border:1px solid black;min-height:100px;height:auto; padding:10px; margin-top:10px;overflow: auto;">
                    <div style="float:left; width:30%; padding-top:20px; padding-left:20px;">
                        @if (@item.Picture != null)
                        {
                            @Html.Raw("<img style='width:80%; height:auto;' src=\"data:image/jpeg;base64,"
                                                                                    + Convert.ToBase64String(@item.Picture) + "\" />")
                            <br />
                        }
                    </div>
                    <div style="float:right;width:70%;height:auto;">
                        <p>@item.Name</p>
                        <hr />
                        <p>@item.Phone</p>
                        <hr />
                        <p>@item.Site</p>
                        <hr />
                        <p>@item.VK, @item.FaceBook</p>
                        <hr />
                        <p>@item.Grapf</p>
                        <hr />
                        <p>@item.Description</p>
                    </div>
                </div>
                <br />
            }

        </section>
    }
