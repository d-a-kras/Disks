@using Microsoft.AspNet.Identity
@model IEnumerable<WebApplication2.Models.Disks>
@{
    ViewBag.Title = "CreateDisks";
}

@if (Request.IsAuthenticated)
{
    <center>

        <a class="btn btn-primary btn-lg" href="home/CreateDisks">Добавить диск</a>


        @if (@Model != null)
        {
            <div id="searchresults">

                <table class="table">
                    <thead class="thead-inverse">
                        <tr>

                            <th>Изображение</th>
                            <th>Код диска</th>
                            <th>Отметка о краже</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>

                                <td><div style="height:100px;width:100px;background-image:url(@item.Folder+'/1.png'')"></div></td>
                                <td>@item.Code</td>
                                <td>@item.LOT</td>
                                @if (!item.LOT)
                                {<td>@item.LOT</td>}
                                else { }
                            </tr>

                        }




                    </tbody>
                </table>

            </div>

        }
    </center>
}
